{
    "version": 0.0,
    "os": "linux",
    
    
   "files": [
    {
      "destination": "web/index.php",
      "source": "web/index.php"
    }
  ],
  
   "hooks":{
      "ApplicationStop":[
         {
            "location":"scripts/stop_server",
            "runas":"root",
            "timeout":300
         }
      ],
      "BeforeInstall":[
         {
            "location":"scripts/install_dependencies",
            "runas":"root",
            "timeout":300
         },
         {
            "location":"scripts/start_server",
            "runas":"root",
            "timeout":300
         }
      ]
   }
}
